<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderComplete"
    android:background="@drawable/bg1edited">
    <TextView
        android:id="@+id/textView16"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Order Complete"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/Hitam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textOrderComplete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Your order complete.\n Thank You"
        android:textColor="@color/Merah"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGrandTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Grand Total : Rp"
        android:textColor="@color/Hitam"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOrderComplete" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="@color/Hitam"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.361"
        app:layout_constraintStart_toEndOf="@+id/textGrandTotal"
        app:layout_constraintTop_toBottomOf="@+id/textOrderComplete" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGrandTotal"
        android:background="@drawable/border"
        android:padding="20dp"
        android:scrollbarSize="10dp"
        android:scrollbarThumbHorizontal="@color/Hitam"
        android:fadeScrollbars="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            >

            <TextView
                android:id="@+id/HasilAir"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:text="TextView"
                android:textColor="@color/Hitam"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/HasilApel"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/HasilAir"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:text="TextView"
                android:textColor="@color/Hitam"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/HasilMangga"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/HasilApel"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:text="TextView"
                android:textColor="@color/Hitam"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/HasilAlpukat"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/HasilMangga"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:text="TextView"
                android:textColor="@color/Hitam"
                android:textStyle="bold"/>
        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/textView14"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/emptystamp"
        android:gravity="center"
        android:onClick="goHome"
        android:text="Main Menu"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView2"
        app:layout_constraintVertical_bias="0.92"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>